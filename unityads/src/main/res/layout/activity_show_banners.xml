<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowBannersActivity">

    <RelativeLayout
        android:id="@+id/rl_top_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"

        android:layout_alignParentTop="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btn_show_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示 top 广告"/>
        <Button
            android:id="@+id/btn_hide_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏 top 广告"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#858585"/>
        <Button
            android:id="@+id/btn_show_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示 bottom 广告"/>
        <Button
            android:id="@+id/btn_hide_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏 bottom 广告"/>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_bottom_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"

        android:layout_alignParentBottom="true"/>


</RelativeLayout>